<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_painel_chamados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.franklincbc.motoon.PainelChamadosActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="6dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#12300000"
        android:id="@+id/activity_painel_chamados_titulo" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="JaboatÃ£o dos Guararapes - SALDO: 47"
        android:textSize="16dp"
        android:layout_below="@+id/activity_painel_chamados_textView_titulo"
        android:id="@+id/activity_painel_chamados_textView_cidade"
        android:textAlignment="center" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_refresh"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/activity_painel_chamados_fabRefresh"
        android:onClick="fabRefresh_onClick"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_painel_chamados_recyclerView"
        android:layout_below="@id/activity_painel_chamados_titulo"/>



</RelativeLayout>

