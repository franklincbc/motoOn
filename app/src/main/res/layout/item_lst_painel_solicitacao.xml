<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">


    <TextView
        android:text="Solicitante: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/item_lst_painel_txt_solicitante" />

    <TextView
        android:text="Data: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/item_lst_painel_txt_data"
        android:layout_below="@+id/item_lst_painel_txt_solicitante"
        android:layout_toLeftOf="@+id/item_lst_painel_nome"
        android:layout_toStartOf="@+id/item_lst_painel_nome" />

    <TextView
        android:text="Bairro: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_lst_painel_txt_data"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/item_lst_painel_txt_bairro"
        android:layout_alignRight="@+id/item_lst_painel_txt_data"
        android:layout_alignEnd="@+id/item_lst_painel_txt_data" />

    <TextView
        android:text="Status: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_lst_painel_txt_bairro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/item_lst_painel_txt_status"
        android:layout_alignRight="@+id/item_lst_painel_txt_data"
        android:layout_alignEnd="@+id/item_lst_painel_txt_data" />

    <TextView
        tools:text="Fulano de Tal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_lst_painel_nome"
        android:textColor="#00688B"
        android:layout_toRightOf="@+id/item_lst_painel_txt_solicitante"
        android:layout_toEndOf="@+id/item_lst_painel_txt_solicitante"
        android:layout_alignParentTop="true" />

    <Button
        android:text="ATENDER"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:id="@+id/item_lst_painel_btn_atender"
        android:layout_alignParentTop="true"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="INICIAR"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_below="@+id/item_lst_painel_btn_atender"
        android:id="@+id/item_lst_painel_btn_finalizar"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        tools:text="31/12/2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_lst_painel_data"
        android:textColor="#00688B"
        android:layout_alignBaseline="@+id/item_lst_painel_txt_data"
        android:layout_alignBottom="@+id/item_lst_painel_txt_data"
        android:layout_toRightOf="@+id/item_lst_painel_txt_solicitante"
        android:layout_toEndOf="@+id/item_lst_painel_txt_solicitante" />

    <TextView
        tools:text="Vila Nobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_lst_painel_bairro"
        android:textColor="#00688B"
        android:layout_below="@+id/item_lst_painel_data"
        android:layout_toRightOf="@+id/item_lst_painel_txt_bairro"
        android:layout_toEndOf="@+id/item_lst_painel_txt_bairro" />

    <TextView
        tools:text="Aguardando Atendimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_lst_painel_status"
        android:textColor="#00688B"
        android:layout_below="@+id/item_lst_painel_bairro"
        android:layout_toRightOf="@+id/item_lst_painel_txt_bairro"
        android:layout_toEndOf="@+id/item_lst_painel_txt_bairro" />

</RelativeLayout>

</android.support.v7.widget.CardView>