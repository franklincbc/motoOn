<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:loadingview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_historico"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.franklincbc.motoon.Lista_Solicitacao_HistoricoActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:id="@+id/recyclerView_lst_chat"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/blueGrey"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/chat_edittext_msg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:hint="Digite uma mensagem aqui"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/chat_button_enviar"
            android:text="Enviar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="btnEnviarOnClick"
            android:layout_weight="0.5"/>
    </LinearLayout>

</LinearLayout>
