<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enviar_documentos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueGrey"
    tools:context="com.franklincbc.motoon.EnviarDocumentosActivity">

    <LinearLayout
        android:id="@+id/enviar_documentos_titulo"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:text="ENVIAR DOCUMENTOS"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/yellow"
        android:id="@+id/enviar_documentos_container_cnh"
        android:layout_below="@id/enviar_documentos_titulo">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Carregar Foto CNH"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:id="@+id/enviar_documentos_textview_cnh"/>

            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/enviar_documentos_imageview_cnh_checked"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_black_24dp"
                android:layout_toRightOf="@+id/enviar_documentos_textview_cnh" />

        </LinearLayout>

        <Button
            android:layout_toRightOf="@+id/enviar_documentos_imageview_cnh_checked"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Carregar"
            android:id="@+id/enviar_documentos_button_cnh"/>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/yellow"
        android:id="@+id/enviar_documentos_container_crlv"
        android:layout_below="@id/enviar_documentos_container_cnh">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Carregar Foto CRLV"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:id="@+id/enviar_documentos_textview_crlv"/>

            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/enviar_documentos_imageview_crlv_checked"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_black_24dp"
                android:layout_toRightOf="@+id/enviar_documentos_textview_crlv" />

        </LinearLayout>

        <Button
            android:layout_toRightOf="@+id/enviar_documentos_imageview_crlv_checked"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Carregar"
            android:id="@+id/enviar_documentos_button_crlv"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/yellow"
        android:id="@+id/enviar_documentos_container_comp_res"
        android:layout_below="@id/enviar_documentos_container_crlv">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Carregar Foto Comprovante ResidÃªncia"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:id="@+id/enviar_documentos_textview_comp_res"/>

            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/enviar_documentos_imageview_comp_res_checked"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_black_24dp"
                android:layout_toRightOf="@+id/enviar_documentos_textview_comp_res" />

        </LinearLayout>

        <Button
            android:layout_toRightOf="@+id/enviar_documentos_imageview_comp_res_checked"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Carregar"
            android:id="@+id/enviar_documentos_button_comp_res"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/yellow"
        android:id="@+id/enviar_documentos_container_foto"
        android:layout_below="@id/enviar_documentos_container_comp_res">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Carregar Foto Pessoal\nObs: 3x4"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:id="@+id/enviar_documentos_textview_foto"/>

            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/enviar_documentos_imageview_foto_checked"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_black_24dp"
                android:layout_toRightOf="@+id/enviar_documentos_textview_foto" />

        </LinearLayout>

        <Button
            android:layout_toRightOf="@+id/enviar_documentos_imageview_foto_checked"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Carregar"
            android:id="@+id/enviar_documentos_button_foto"/>

    </LinearLayout>

    <Button
        android:layout_marginBottom="10dp"
        android:id="@+id/enviar_documentos_button_enviar"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="200dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Enviar"/>

    <LinearLayout
        android:layout_below="@id/enviar_documentos_container_foto"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/semfoto"
            android:id="@+id/enviar_documentos_imageView_Cnh" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/semfoto"
            android:id="@+id/enviar_documentos_imageView_Crlv" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/semfoto"
            android:id="@+id/enviar_documentos_imageView_Comp_res" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/semfoto"
            android:id="@+id/enviar_documentos_imageView_Foto" />

    </LinearLayout>


</RelativeLayout>
